<% if entity.address and !entity.address.blank? -%>
    <cbc:StreetName><%=h entity.address%></cbc:StreetName>
<% end -%>
<% if entity.city and !entity.city.blank? -%>
    <cbc:CityName><%=h entity.city%></cbc:CityName>
<% end -%>
<% if entity.postalcode and !entity.postalcode.blank? -%>
    <cbc:PostalZone><%=h entity.postalcode%></cbc:PostalZone>
<% end -%>
<cac:Country>
  <cbc:IdentificationCode listID="ISO3166-1" listAgencyID="6"><%=h entity.country_alpha2%></cbc:IdentificationCode>
</cac:Country>
