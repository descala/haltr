<% end %>
            </RelatedDocuments>
<% end %>
<% if (@invoice.extra_info_plus_tax_comments and @invoice.extra_info_plus_tax_comments.size > 0) %>
            <InvoiceAdditionalInformation><%=h @invoice.extra_info_plus_tax_comments[0...2500]%></InvoiceAdditionalInformation>
<% end %>
          </AdditionalData>
<% end %>
