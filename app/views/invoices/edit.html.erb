<% if @invoice.invoice_img -%>

<div id="invoice_img" class="container1">
  <div class="container2">

  <div class="colu1" style="background-image: url('<%=project_invoice_img_path(@invoice.invoice_img, project_id: @project)%>')">
    <% @invoice.invoice_img.useful_tokens.each do |number,attributes| %>
      <div class="rectangle-txt-edit" style="left:<%=attributes[:x0]%>px; top:<%=attributes[:y0]%>px; width:<%=attributes[:x1].to_i-attributes[:x0].to_i%>px; height:<%=attributes[:y1].to_i-attributes[:y0].to_i%>px; font-size: <%=attributes[:y1].to_i-attributes[:y0].to_i-3%>px"><%=h attributes[:text]%></div>
    <%end%>
    <div style="height: 1000px;">
    </div>
  </div>

  <div class="colu2">

<% end -%>

<!--formulari-->
<div class="seccio grup">
  <div class="col span-2-de-2">

    <%= labelled_form_for :invoice, @invoice, :url => { :action => 'update', :id => @invoice }, :html => {:method => :put, :class => 'formee'}  do |f| %>
      <%= render :partial => 'invoices/form', :locals => { :f => f } %>
      <% if @invoice.original and !@invoice.modified_since_created? -%>
        <%= f.submit l(:button_save), :name => 'save', :confirm => l(:overriding_original_warn) %>
      <% else -%>
        <%= f.submit l(:button_save), :name => 'save' %>
      <% end -%>
      <% unless @invoice.is_a? InvoiceTemplate or @invoice.is_a? DraftInvoice -%>
        <% if @invoice.original and !@invoice.modified_since_created? -%>
          <%= f.submit l(:button_save_and_send), :name => 'save_and_send', :confirm => l(:overriding_original_warn) %>
        <% else -%>
          <%= f.submit l(:button_save_and_send), :name => 'save_and_send' %>
        <% end -%>
      <% end -%>
    <% end %>

  </div>
</div>
<!--final formulari-->

<% if @invoice.invoice_img -%>
    </div>

  </div>
</div>
<% end -%>




