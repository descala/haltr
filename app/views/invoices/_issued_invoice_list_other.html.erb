<% if @invoices_not_sent.any? -%>
<h3><%=l(:open_invoices)%></h3>
<p>
<% @invoices_not_sent.each_with_index do |invoice, i| -%>
  <%=link_to_invoice invoice, @invoice %><%= ", " unless invoice == @invoices_not_sent.last %>
  <% if @invoices_not_sent_count > 10 and i == 9 -%>
    <%= link_to "[ ...#{@invoices_not_sent_count} #{l :label_invoice_plural}]", project_invoices_path(@project, client_id: invoice.client, new: '1') %>
  <% end -%>
<% end -%>
</p>
<% end -%>

