  <% if @invoices_closed_count > 10 and i == 9 -%>
    <%= link_to "[ ...#{@invoices_closed_count} #{l :label_invoice_plural}]", project_invoices_path(@project, client_id: invoice.client, closed: '1') %>
  <% end -%>
<% end -%>
</p>
<% end -%>

