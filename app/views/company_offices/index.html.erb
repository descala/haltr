<div class="seccio grup">
<div class="col span-1-de-2">
  <ul class="menu-rapid">
    <li>
      <%= link_to l(:label_company_office_new), new_project_company_office_path(project_id: @project), :class => 'icon icon-add' %>
    </li>
  </ul>
</div>
<div class="col span-1-de-2">
  <h1 style="float: right;"><%= "" %> - <%= l(:label_company_offices) %></h1>
</div>
</div>

<!--filtres-->
<div class="seccio grup">
  <div class="col span-2-de-2">
    <div class="filtres">
      <div class="titularAcc">
        <%= l(:label_filter_plural) %>
      </div>
      <div class="contingutAcc">
        <form class="formee">
          <fieldset>
            <legend><%=l(:label_search)%></legend>

            <%= form_tag({}, :method => :get) do %>
              <div class="seccio grup">
                <div class="col span-1-de-2">
                  <%= text_field_tag 'name', params[:name] %>
                </div>
              </div>
              <div class="seccio grup">
                <div class="col span-2-de-2">
                  <%= submit_tag l(:button_apply), :name => nil %>
                </div>
              </div>
            <% end %>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
<!--final filtres-->

<!--taula-->
<div class="seccio grup">
  <div class="col span-2-de-2">
    <table class="taula-1 list">
      <thead>
        <tr>
          <th><%= l(:field_address) %></th>
          <th><%= l(:field_city) %></th>
          <th><%= l(:button_edit) %></th>
          <th><%= l(:button_delete) %></th>
        </tr>
      </thead>
      <tbody>
        <% @company_offices.each do |office| -%>
          <tr class="user <%= cycle("odd", "even") %>" />
            <td><%=h office.address %></td>
            <td><%=h office.city %></td>
            <td align="center"><%= link_to_if_authorized l(:button_edit), edit_project_company_office_path(office, project_id: @project), class: 'icon icon-edit editar' %></td>
            <td align="center"><%= link_to_if_authorized l(:button_delete), {action: 'destroy', project_id: @project, id: office}, confirm: l(:text_are_you_sure), method: :delete, class: 'icon icon-del eliminar' %></td>
          </tr>
        <% end -%>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="6">&nbsp;</td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
<!--final taula-->

<!--paginacio-->
<div class="seccio grup pagination paginacio">
  <%= pagination_links_full @company_office_pages, @company_office_count, {:per_page_links=>false} %>
</div>
<!--final paginacio-->


<% html_title(l(:label_company_offices)) -%>

<% content_for :sidebar do %>
  <%= render_menu :my_company_menu, @project %>
<% end %>


