<!--formulari-->
<%= form_for @payment, url: {action: 'create', project_id: @project}, html: {class: 'formee'} do |f| %>
  <%= render partial: 'form', locals: {f: f} %>
  <% if @invoice -%>
    <%= render partial: 'paid_notification' %>
    <%= submit_tag I18n.t(:save_without_mail) %>
  <% else -%>
    <%= submit_tag l(:button_create) %>
  <% end -%>
<% end %>
<!--final formulari-->

<% content_for :sidebar do %>
  <%= render_menu :payments_menu, @project %>
<% end %>
